<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopCard"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:background="#d3d3d3"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductImage"
            android:textSize="12sp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:textColor="#008000"
            android:text="Up to 69% OFF"/>
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductImage"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="6dp"
            android:textColor="@color/black"
            android:layout_below="@+id/tvDiscount"
            android:text="Grocery and Staples"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductImage"
            android:textSize="10sp"
            android:layout_marginStart="6dp"
            android:textColor="#c4c3d0"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tvType"
            android:text="Pulses,Atta and Others Flours,Rice and other Grains,Dry Fruits and Nuts"
            android:textStyle="bold"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>