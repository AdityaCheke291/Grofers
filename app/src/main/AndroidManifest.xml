<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.grofer">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/groferlog"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grofer"
        tools:ignore="AllowBackup">
        <activity android:name=".Activity.VideoActivity"/>
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.ConfirmedOrder"
            android:theme="@style/Theme.CheckingPage">
        </activity>
        <activity android:name=".Activity.MembershipActivity" />
        <activity android:name=".Extras.browseCategories_itemClicked" />
        <activity android:name=".Activity.CartActivity" />
        <activity android:name=".model.Profile" />
        <activity android:name=".Activity.LowPriceActivity" />
        <activity android:name=".Activity.FAQS" />
        <activity android:name=".Activity.OfferActivity" />
        <activity android:name=".Activity.CategoryActivity" />
        <activity android:name=".Activity.CheckingOut" />
        <activity android:name=".Activity.HomeActivity" />
        <activity android:name=".Activity.VerifyPhoneNumber" />
        <activity
            android:name=".Activity.SplashScreen"
            android:theme="@style/Theme.SplashScreen"
            tools:ignore="IntentFilterExportedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>