<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grofer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grofer">
        <activity android:name=".Profile"></activity>
        <activity android:name=".Activity.MembershipActivity" />
        <activity android:name=".Activity.OfferActivity" />
        <activity android:name=".Activity.CategoryActivity" />
        <activity android:name=".Activity.HomeAcitivity" />
        <activity android:name=".VerifyPhoneNumber" />
        <activity android:name=".oAuth" />
        <activity
            android:name=".Activity.SplashScreen"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>